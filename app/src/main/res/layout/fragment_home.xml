<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp"

            >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="20px"
                android:background="@drawable/rounded_frame">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Nível Diário"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Cor do texto alterada para preto -->

                <!-- Linha de 20px na parte superior -->

                <!-- Adicione aqui outros elementos dentro do FrameLayout -->
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:layout_margin="20px"
                android:background="@drawable/rounded_frame">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Índice de massa corporal (IMC)"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" /> <!-- Cor do texto alterada para preto -->

                <!-- Linha de 20px na parte superior -->
                <View
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#000000" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80px"
                    android:layout_marginTop="90px"
                    android:rotationX="0"
                    android:text="Peso: x"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="700px"
                    android:layout_marginTop="90px"
                    android:text="Altura: x"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80px"
                    android:layout_marginTop="170px"
                    android:text="20"
                    android:textSize="48sp" />

                <Button
                    android:id="@+id/updateWeight"
                    android:layout_width="135dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="550px"
                    android:layout_marginTop="200px"
                    android:text="Atualizar"
                    android:textColorLink="#DA2222" />

                <!-- Adicione aqui outros elementos dentro do FrameLayout -->
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:layout_margin="20px"
                android:background="@drawable/rounded_frame">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Nível Calórico"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" /> <!-- Cor do texto alterada para preto -->

                <!-- Linha de 20px na parte superior -->
                <View
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#000000" />

                <!-- Adicione aqui outros elementos dentro do FrameLayout -->
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height"
                android:layout_margin="20px"
                android:background="@drawable/rounded_frame">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:text="Quilometros Percorridos"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <View
                    android:layout_width="290dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:background="#000000" />
            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>